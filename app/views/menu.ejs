                    </div>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade bd-example-modal-lg" id="itemModal" tabindex="-1" role="dialog" aria-labelledby="itemModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <form id="submitOrder" action="/menu" method="POST">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-7"> <!--Sample Image of Pancakes-->
                                    <img style="width: 100%; border-radius: 25px" src="https://www.kingarthurflour.com/sites/default/files/recipe_legacy/48-3-large.jpg">
                                    <br></br>
                                    <p style="color:grey; font-weight: bold">Dietary Information</p>
                                </div>

                                <div class="col-md-5"> <!--Info Column-->
                                    <h2 id="name" style="font-weight: bolder">Food Name</h2>
                                    <h2 id="descrption" style="font-weight: 300">Item Description</h2>

                                    <div class="item-details"> <!--Choosing Size with radio buttons-->
                                        <div class="item-details-box">
                                            <p class="detail">Choose Size</p>
                                            <p class="req-or-opt">Required</p>
                                        </div>
                                        <div class="forms">
                                            <div class="form-check"> 
                                                <input class="form-check-input" type="radio" name="size" id="small" value="Small" required>
                                                <label class="form-check-label" for="sizeRadios1">
                                                    Small
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="size" id="medium" value="Medium">
                                                <label class="form-check-label" for="sizeRadios2">
                                                    Medium
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="size" id="large" value="Large">
                                                <label class="form-check-label" for="sizeRadios3">
                                                    Large
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="item-details"> <!--Choosing Sides with checkboxes-->
                                        <div class="item-details-box">
                                            <p class="detail">Sides</p>
                                            <p class="req-or-opt">Optional</p>
                                        </div>
                                        <div class="forms">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="side" id="ex1" value="XX">
                                                <label class="form-check-label" for="sideBox1">
                                                    XX
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="side" id="ex2" value="YY">
                                                <label class="form-check-label" for="sideBox2">
                                                    YY
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="side" id="ex3" value="ZZ">
                                                <label class="form-check-label" for="sideBox3">
                                                    ZZ
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="item-details"> <!--Providing special instructions-->
                                        <div class="item-details-box">
                                            <p class="detail">Special Instructions</p>
                                            <p class="req-or-opt">Optional</p>
                                        </div>
                                        <div class="form-group">
                                            <textarea class="form-control" rows="3" form="submitOrder" name="special-instructions"></textarea>
                                        </div>
                                    </div>

                                    <div class="item-details"> <!--Controlling quantity-->
                                        <div class="item-details-box">
                                            <p class="detail">Quantity</p>
                                        </div>
                                        <div class="quantity-buttons d-flex justify-content-center">
                                            <div class="num" id="subtract">-</div>
                                                <span id="quantity">1</span>
                                            <div class="num" id="add">+</div>
                                        </div>
                                    </div>
                                </div>
                                
                                <button type="submit" class="btn btn-dark" id="cartButton" onclick=cartCookies()>
                                    <div class="add-cart"><span id="cart-text">Add 1 to cart</span><span id="add-price">$00.00</span></div>
                                </button>

                                <div class="price">$$$</div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    
    </body>

    

    <script type="text/javascript">
        var today = new Date();
        var expiry = new Date(today.getTime() + 30 * 24 * 3600 * 1000);
        var cart_items = "";

        function setCookie(name, value) {
            document.cookie=name + "=" + escape(value) + "; path=/; expires=" + expiry.toGMTString();
        }

        function helper() {
            // name (string)
            var name = document.getElementById('name').textContent;

            // size (string)
            var size = "";
            if (document.getElementById('small').checked) { size = "small"; }
            if (document.getElementById('medium').checked) { size = "medium"; }
            if (document.getElementById('large').checked) { size = "large"; }

            // sides (array)
            var sides = [];
            if (document.getElementById('ex1').checked) { 
                sides.push(document.getElementById('ex1').value);
            }
            if (document.getElementById('ex2').checked) { 
                sides.push(document.getElementById('ex2').value);
            }
            if (document.getElementById('ex3').checked) { 
                sides.push(document.getElementById('ex3').value);
