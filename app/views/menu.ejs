                </div>
        
                <!-- Sample order summary (right) -->
                <div class = "lower-right-container">
                    <div id="order-summary-div" class="col-3">
                        <div class="order-summary">
                            Order Summary
                        </div>
                        <div>
                            <div class="fixed-scroll">
                                <div class="summary-item row">
                                    <span class="thumbnail thumb-img">1</span>
                                    <p> Food Name<br>
                                    <span style="font-style: italic;">Options</span></p>
                                    <span class="thumbnail summary-price">$00.00</span>
                                </div>
                                <hr class="divider">
                                <div class="summary-item row">
                                    <span class="thumbnail thumb-img">2</span>
                                    <p> Food Name<br>
                                    <span style="font-style: italic;">Options</span></p>
                                    <span class="thumbnail summary-price">$00.00</span>
                                </div>
                                <div class="summary-item row">
                                    <span class="thumbnail thumb-img">3</span>
                                    <p> Food Name<br>
                                    <span style="font-style: italic;">Options</span></p>
