<!DOCTYPE html>
<html>
    <head>
        <title>Orders Page for UWEAST - CK</title>
        <meta charset="utf-8">

        <link rel="stylesheet" type="text/css" href="/css/orders.css">

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"> </script>
    </head>

    <body>
        <!-- Takes navbar ejs and inserts it here. -->
        <%- include partials/navbar.ejs %>
    </body>

    <script src="/js/orders.js"></script>
    <head>
        <link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css">
      </head>
      <body>
        <table id="example">
          <thead>
            <tr><th>Name</th><th>Date</th><th>Order ID</th><th>Completed</th></tr>
          </thead>
          <tbody>
          </tbody>
        </table>
        <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
        <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
        <script>          
        
        $('.example').click(function(){
        $(this).nextUntil('tr.example').slideToggle(200);
        });
      
        $(function(){
          $("#example").dataTable({
        "aaData":[
          ["Name1","Date1","placeholder","complete"],
          ["Name2","Date2","placeholder","complete"],
          ["Name3","Date3","placeholder","complete"],
          ["Name4","Date4","placeholder","complete"],
          ["Name5","Date5","placeholder","complete"]
        ],
        "aoColumnDefs":[{
              "sTitle":"Site name"
            , "aTargets": [ "site_name" ]
        },{
              "aTargets":[ 3 ]
            , "sType": "date"
            , "mRender": function(date, type, full) {
                return '<a class="btn btn-primary disabled btn-sm" href=#/' + full[0] + '>' + 'Completed' + '</a>';
            }  
        }]
      });
        })
        </script>
      </body>
</html>
